{
  "manifest_version": 3,
  "name": "YouTube Shorts Blocker",
  "version": "1.1",
  "description": "Toggle YouTube Shorts on and off.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
