{
  "manifest_version": 3,
  "name": "YouTube Focus",
  "version": "2.0.0",
  "description": "Hide YouTube Shorts with a focus timer and toggle.",
  "permissions": ["storage", "notifications"],

  "host_permissions": ["*://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }

}
